{
	"name": "테스트",
	"description": "임시 테스트 확장 프로그램",
	"manifest_version": 3,
	"version": "1.0.0",
	"action": {
		"default_popup": "index.html"
	},
	"commands": {
		"copy": {
			"suggested_key": {
				"default": "Ctrl+C",
				"mac": "Command+C"
			},
			"description": "copy~~"
		}
	},
	"content_scripts": [
		{
			"matches": ["*://*/*", "<all_urls>"],
			"js": ["src/content.js"]
		}
	],
	"background": {
		"service_worker": "src/background.js"
	},
	"permissions": ["clipboardRead", "clipboardWrite", "tabs", "activeTab"]
}
